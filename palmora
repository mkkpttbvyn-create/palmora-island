<script>
function scrollToSection(id){document.getElementById(id).scrollIntoView({behavior:'smooth'});}
const modals = {
'dining':{title:'Exquisite Dining Experiences',text:'Indulge in Mediterranean flavors crafted by world-class chefs. Private beach dinners, wine pairing experiences, and signature tasting menus await our guests.'},
'wellness':{title:'Wellness & Spa Retreat',text:'Experience holistic wellness with our spa, yoga pavilions, and personal trainers. Detox programs, massages, and sea-view meditation rooms provide ultimate relaxation.'},
'experiences':{title:'Unique Experiences',text:'Explore the Mediterranean with private yacht excursions, diving adventures, cultural tours, and curated art experiences for discerning guests.'},
'reserve':{title:'Reserve Your Stay',text:'Contact our reservations team or book directly online to secure your private Mediterranean escape. Personalized concierge support available for all stays.'}
};
const residences = {
'oceanVilla':{title:'Ocean Sanctuary Villa',text:'Our Ocean Sanctuary Villa offers private infinity pool, direct beach access, and dedicated host service. Ideal for couples or solo retreats.',availability:true,price:'€2,300 per night'},
'cliffRoyal':{title:'Cliffside Royal Residence',text:'Cliffside Royal Residence features panoramic sea views, rooftop terrace, and luxurious interiors. Perfect for families or special occasions.',availability:true,price:'€3,800 per night'}
};
function openModal(section){
document.getElementById('modalOverlay').style.display='flex';
document.getElementById('modalExtra').innerHTML='';
document.getElementById('modalTitle').innerText=modals[section].title;
document.getElementById('modalText').innerText=modals[section].text;
}
function openResidence(res){
document.getElementById('modalOverlay').style.display='flex';
document.getElementById('modalTitle').innerText=residences[res].title;
document.getElementById('modalText').innerText=residences[res].text;
document.getElementById('modalExtra').innerHTML=`
<p><strong>Price:</strong> ${residences[res].price}</p>
${residences[res].availability ? '<label>Check-in</label><input type="date"><label>Check-out</label><input type="date"><button>Book Now</button>' : '<p>Currently unavailable</p>'}`;
}
function closeModal(){document.getElementById('modalOverlay').style.display='none';}
const observer = new IntersectionObserver(entries=>{
entries.forEach(entry=>{
if(entry.isIntersecting){entry.target.style.opacity=1;entry.target.style.transform='translateY(0)';}});
},{threshold:0.2});
document.querySelectorAll('section, .hero').forEach(el=>observer.observe(el));
</script>

